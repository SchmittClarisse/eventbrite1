<html lang="en">
  <header class="text-center">
    <h2>Tu veux changer ton mdp ?<%= resource_name.to_s.humanize %></h2>
  </header>

  <body class="text-center">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
</br>
    <div class="field">
      <%= f.label :password, "Nouveau mdp" %><br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
    <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>
</br>
    <div class="field">
      <%= f.label :password_confirmation, "Confirme le nouveau mdp" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
</br>
    <div class="actions">
      <%= f.submit "Changer mon mdp" %>
    </div>
  <% end %>
    <%= render "devise/shared/links" %>
  </body>
</html>
